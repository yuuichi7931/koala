<% total_count = stars[4] + stars[3] + stars[2] + stars[1] + stars[0] %>
<% if 0<total_count %>

<div class="row placeholders">
    <div id="stars">
      <div class="col-sm-8 col-md-6">
        <h4>評価分布</h4>
        <div id="evaluation_graph"></div>
        <div id="evaluation_graph_caption"></div>
      </div>

      <div class="col-sm-8 col-md-6">
        <% if @version %>
        <h4><%= @version %>のレビュー評価</h4>
        <% else %>
        <h4>全てのバージョンのレビュー評価</h4>
        <% end %>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="span1"><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i></td>
              <td class="span1"><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i></td>
              <td class="span1"><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i></td>
              <td class="span1"><i class="icon-star"></i><i class="icon-star"></i></td>
              <td class="span1"><i class="icon-star"></i></td>
              <td class="span1">合計</i></td>
            </tr>
            <tr>
              <td><%= stars[4] %></td>
              <td><%= stars[3] %></td>
              <td><%= stars[2] %></td>
              <td><%= stars[1] %></td>
              <td><%= stars[0] %></td>
              <td><%= total_count %></td>
            </tr>
            <tr>
              <td><%= (stars[4] * 100) / total_count %>%</td>
              <td><%= (stars[3] * 100) / total_count %>%</td>
              <td><%= (stars[2] * 100) / total_count %>%</td>
              <td><%= (stars[1] * 100) / total_count %>%</td>
              <td><%= (stars[0] * 100) / total_count %>%</td>
              <td>100%</td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
</div>
<% end %>
